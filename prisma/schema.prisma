generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  ACTIVE
  INACTIVE
}

model Town {
  id        String     @id @default(uuid())
  name      String     @unique
  status    Status     @default(ACTIVE)
  sectors   Sector[]
  customers Customer[]
  createdAt DateTime   @default(now())
}

model Sector {
  id        String     @id @default(uuid())
  name      String
  townId    String
  status    Status     @default(ACTIVE)
  town      Town       @relation(fields: [townId], references: [id], onDelete: Cascade)
  customers Customer[]
  createdAt DateTime   @default(now())

  @@unique([name, townId])
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String
  address   String
  townId    String
  sectorId  String
  vendor    Boolean  @default(false)
  town      Town     @relation(fields: [townId], references: [id])
  sector    Sector   @relation(fields: [sectorId], references: [id])
  createdAt DateTime @default(now())
}
